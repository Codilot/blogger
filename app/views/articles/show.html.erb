<% provide(:title, @article.title) %>

<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <!-- show article -->
      <h1>
        <%= @article.title %>
      </h1>

      <strong><%= @article.created_at.strftime("%d %B %Y | %I:%M %P") %></strong>

      <h4>
        <%= @article.teaser %>
      </h4>

      <% if @article.image_url.present? %>
        <%= image_tag(@article.image_url, class: "img-rounded article-show-image img-responsive") %>
      <% end%>

      <p>
        <%= @article.text %>
      </p>

      <!-- show comments -->
      <h2>Comments</h2>
      <%= render @article.comments %>

      <!-- add comment form -->
      <h2>Add a comment:</h2>
      <%= render 'comments/form' %>

      <div class="btn-group">
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-default" %>
        <%= link_to 'Back', articles_path, class: "btn btn-default" %>
      </div>
    </div><!-- col-sm-8 -->
    
    <div class="col-sm-4 sidebar">
      
      <div class="random-item">
        <h3>Featured</h3>
        <% if @random_article.image_url.present? %>
          <%= image_tag(@random_article.image_url, class: "img-responsive img-rounded") %>
        <% end%>
        <h2><%= link_to @random_article.title, article_path(@random_article) %></h2>
        <p><%= @random_article.teaser %></p>
        <%= link_to 'Read more', article_path(@random_article), class: "btn btn-default" %>
      </div>

      <div class="article-list">
        <h3>More articles</h3>
        <% if @articles_latest.present? %>
          <% @articles_latest.each do |article| %>
            <h2><%= link_to article.title, article_path(article) %></h2>
          <% end%>
        <% end%> 
      </div>
      
    </div>


  </div><!-- end row -->
</div><!-- end container -->